{
  "name": "SocketIOToObservable",
  "version": "0.0.1",
  "main": "dist/index.js",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^21.1.8",
    "@types/socket.io": "^1.4.31",
    "@types/socket.io-client": "^1.4.32"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.17",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "rxjs": "^5.5.5",
    "socket.io": "^2.0.4",
    "ts-jest": "^21.2.4",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1"
  },
  "files": [
    "build",
    "package.json"
  ],
  "peerDependencies": {
    "rxjs": "^5.5.5",
    "socket.io": "^2.0.4"
  },
  "scripts": {
    "start": "webpack-dev-server --config config/webpack.config.js --env development",
    "build": "webpack --config config/webpack.config.js --env production",
    "postbuild": "typedoc --out build/docs src --exclude **/*/index.spec.ts",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "./node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testRegex": "(/src/.*(spec))(\\.tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ]
  }
}
